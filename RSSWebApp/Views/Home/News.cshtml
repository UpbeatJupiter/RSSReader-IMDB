@{
    Layout = null;
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Link</th>
            <th>Publish Date</th>
        </tr>
    </thead>
    <tbody id="haberTablosu">
        @if (ViewBag.Haberler != null)
        {
            foreach (var item in ViewBag.Haberler)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td><a href="@item.Link" target="_blank" id="haberLinki">Detaylar için tıklayınız.</a></td>
                    <td>@item.PubDate</td>
                </tr>
            }
        }
    </tbody>
</table>
